<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/cardAdoption"
        style="?attr/materialCardViewElevatedStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

        <ImageView
            android:id="@+id/ivCardBackGround"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/tvCardNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:layout_marginTop="30dp"
            android:layout_marginStart="25dp" />

        <TextView
            android:id="@+id/tvCardEdad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad / "
            android:layout_marginTop="110dp"
            android:layout_marginStart="140dp" />

        <TextView
            android:id="@+id/tvCardGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Macho o Hembra"
            android:layout_marginTop="110dp"
            android:layout_marginStart="180dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="250dp"
            app:srcCompat="@drawable/favorito" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:layout_marginTop="70dp"
            android:layout_marginStart="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/huella"/>

                <TextView
                    android:id="@+id/tvCardRaza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Raza" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/huella"/>

                <TextView
                    android:id="@+id/tvCardSubRaza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SubRaza" />
            </LinearLayout>
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>