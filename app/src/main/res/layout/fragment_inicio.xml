<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagen redondeada en el centro -->
    <!-- Crea un recurso drawable para redondear la imagen -->

    <!-- Título en negrita -->

    <ImageView
        android:id="@+id/rounded_image"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="74dp"
        android:src="@drawable/rounded_background" />

    <TextView
        android:layout_width="285dp"
        android:layout_height="36dp"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Make your life more happy with us to have a little new friends"
        android:textColor="#5F5B5B"
        android:justificationMode="inter_word"
        android:textSize="14dp" />


    <Button
        android:layout_width="198dp"
        android:layout_height="52dp"
        android:layout_below="@id/title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="149dp"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="123dp"
        android:paddingHorizontal="16dp"
        android:text="Get started"
        android:justificationMode="inter_word"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="285dp"
        android:layout_height="36dp"
        android:layout_below="@id/rounded_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Adopción de Perritos"
        android:gravity="center"
        android:textColor="#5F5B5B"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>
